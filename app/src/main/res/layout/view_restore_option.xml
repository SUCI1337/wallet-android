<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/restore_wallet_cta_view"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/setting_option_background"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="@dimen/common_horizontal_margin">

    <com.tari.android.wallet.ui.component.tari.TariTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:textColor="?attr/palette_text_heading"
        android:textSize="15sp"
        app:customFont="medium" />

    <com.tari.android.wallet.ui.component.tari.TariProgressBar
        android:id="@+id/restore_wallet_menu_item_progress_view"
        tools:visibility="visible"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical|end"
        android:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/restore_wallet_menu_item_arrow_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:src="@drawable/icon_apply_setting" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/settings_background" />
</FrameLayout>

