<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:paddingStart="25dp"
    android:paddingEnd="25dp">

    <!-- separator -->
    <View
        android:id="@+id/tx_list_header_separator_view"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <!-- title -->
    <com.tari.android.wallet.ui.component.CustomFontTextView
        android:id="@+id/tx_list_header_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/home_tx_list_header_today"
        android:textColor="@color/home_tx_section_header_title"
        android:textSize="12sp"
        app:customFont="AVENIR_LT_STD_MEDIUM" />


</LinearLayout>
