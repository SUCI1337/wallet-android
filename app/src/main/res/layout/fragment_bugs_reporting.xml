<?xml version="1.0" encoding="utf-8"?>
<com.tari.android.wallet.ui.component.tari.TariPrimaryBackground xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tari.android.wallet.ui.component.tari.TariToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:text="@string/bugs_reporting_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:orientation="vertical">

                <com.tari.android.wallet.ui.component.tari.TariTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:singleLine="true"
                    android:text="@string/bugs_reporting_description"
                    android:textColor="?attr/palette_text_heading"
                    android:textSize="13sp"
                    app:customFont="medium" />

                <com.tari.android.wallet.ui.component.tari.TariEditText
                    android:id="@+id/name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="@string/bugs_reporting_name_placeholder"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:lines="1"
                    android:paddingVertical="20dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    app:customFont="medium" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_divider" />

                <com.tari.android.wallet.ui.component.tari.TariEditText
                    android:id="@+id/email_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="@string/bugs_reporting_email_placeholder"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:lines="1"
                    android:paddingVertical="20dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    app:customFont="medium" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_divider" />

                <com.tari.android.wallet.ui.component.tari.TariTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:singleLine="true"
                    android:text="@string/bugs_reporting_description"
                    android:textColor="?attr/palette_text_heading"
                    android:textSize="13sp"
                    app:customFont="medium" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/background_gray_round">

                    <com.tari.android.wallet.ui.component.tari.TariEditText
                        android:id="@+id/bug_description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:minHeight="150dp"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="16dp"
                        android:singleLine="false"
                        android:textSize="16sp"
                        app:customFont="medium"
                        tools:text="@string/long_dummy_message" />

                </FrameLayout>

                <com.tari.android.wallet.ui.component.tari.TariTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/bugs_reporting_additional_info"
                    android:textColor="?attr/palette_text_body"
                    android:textSize="14sp"
                    app:customFont="medium" />

                <com.tari.android.wallet.ui.component.tari.TariButton
                    android:id="@+id/send_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_action_button_height"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/gradient_button_bg"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:text="@string/bugs_reporting_send"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:customFont="heavy" />

                <com.tari.android.wallet.ui.component.tari.TariButton
                    android:id="@+id/view_logs_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_action_button_height"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="50dp"
                    android:background="@null"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:text="@string/bugs_reporting_view_logs"
                    android:textAllCaps="false"
                    android:textColor="@color/purple"
                    android:textSize="16sp"
                    app:customFont="heavy" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.tari.android.wallet.ui.component.tari.TariPrimaryBackground>