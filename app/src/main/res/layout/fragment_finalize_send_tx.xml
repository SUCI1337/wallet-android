<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/finalize_send_tx_vw_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <VideoView
        android:id="@+id/finalize_send_tx_video_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/finalize_send_tx_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_autoPlay="false"
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/sending_tari"
            app:lottie_renderMode="automatic" />

        <LinearLayout
            android:id="@+id/finalize_send_tx_vw_info_line_1_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="bottom">

            <com.tari.android.wallet.ui.component.CustomFontTextView
                android:id="@+id/finalize_send_tx_txt_info_line_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finalize_send_tx_sending_step_1_desc_line_1"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:customFont="AVENIR_LT_STD_LIGHT" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/finalize_send_tx_vw_info_line_2_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="bottom">

            <com.tari.android.wallet.ui.component.CustomFontTextView
                android:id="@+id/finalize_send_tx_txt_info_line_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finalize_send_tx_sending_step_1_desc_line_2"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:customFont="AVENIR_LT_STD_BLACK" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_marginTop="40dp">

            <FrameLayout
                android:id="@+id/finalize_send_tx_vw_prog_bar_step_1_container"
                android:layout_width="55dp"
                android:background="@color/finalize_send_progress_bar_passive_bg"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/finalize_send_tx_prog_bar_step_1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:progressBackgroundTint="@color/finalize_send_progress_bar_active_bg"
                    android:progress="0"
                    android:progressTint="@color/purple" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/finalize_send_tx_vw_prog_bar_step_2_container"
                android:layout_marginStart="6dp"
                android:layout_width="55dp"
                android:background="@color/finalize_send_progress_bar_passive_bg"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/finalize_send_tx_prog_bar_step_2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:progressBackgroundTint="@color/finalize_send_progress_bar_active_bg"
                    android:progress="0"
                    android:progressTint="@color/purple" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/finalize_send_tx_vw_prog_bar_step_3_container"
                android:layout_width="55dp"
                android:layout_marginStart="6dp"
                android:background="@color/finalize_send_progress_bar_passive_bg"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/finalize_send_tx_prog_bar_step_3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:progressBackgroundTint="@color/finalize_send_progress_bar_active_bg"
                    android:progress="0"
                    android:progressTint="@color/purple" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>